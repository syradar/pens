{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules/**/*"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "ignore": ["**/*.json"],
    "indentStyle": "space",
    "attributePosition": "multiline",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  }
}
